<UserControl x:Class="EnglishAimlessly2.UserControls.WordPreviewItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishAimlessly2.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">
    <Border BorderBrush="#555"
            BorderThickness="1"
            CornerRadius="10">
        <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
            <TextBlock FontSize="14" TextWrapping="Wrap">
                <Run x:Name="txtWord" Text="Word"/>
                <Run x:Name="txtType" Foreground="Red" Text=" Type"/>
            </TextBlock>

            <TextBlock x:Name="txtDesc" FontSize="10"
                       Text="Description"
                       Margin="0 10 0 0"
                       TextWrapping="WrapWithOverflow"/>
        </StackPanel>
    </Border>
</UserControl>
