<UserControl x:Class="EnglishAimlessly2.UserControls.GroupItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishAimlessly2.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="500">
    <Border BorderThickness="1" BorderBrush="#000" CornerRadius="10">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" VerticalAlignment="Center"
                        Margin="10">
                <TextBlock Text="Group Name"
                           FontSize="16"
                           x:Name="txtName"/>
                <TextBlock Text="Description Here"
                           FontSize="12"
                           TextWrapping="WrapWithOverflow"
                           Margin="0 10 0 0"
                           x:Name="txtDesc"/>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
