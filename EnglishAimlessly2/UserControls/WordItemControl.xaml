<UserControl x:Class="EnglishAimlessly2.UserControls.WordItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishAimlessly2.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="500">
    <Border BorderBrush="#555"
            BorderThickness="1"
            CornerRadius="10">
        <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
            <TextBlock x:Name="txtWord" FontSize="16"
                       Text="Word Name (Type)"/>

            <TextBlock x:Name="txtDesc" FontSize="12"
                       Text="Description"
                       Margin="0 10 0 0"
                       TextWrapping="WrapWithOverflow"/>
        </StackPanel>
    </Border>
</UserControl>
